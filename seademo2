  <script>
    function calculateShipping() {
      const weight = parseFloat(document.getElementById('weight').value);
      const value = parseFloat(document.getElementById('value').value);
      const description = document.getElementById('description').value;
      
      // Validaciones
      if (isNaN(weight) || weight <= 0) {
        alert('Por favor ingresa un peso válido (mínimo 0.1 kg)');
        return;
      }
      
      if (isNaN(value) || value <= 0) {
        alert('Por favor ingresa un valor declarado válido (mínimo $1)');
        return;
      }
      
      // Cálculos según tus requerimientos
      const customsFee = 8; // $8 fijos de desaduanaje
      const firstKilo = 12; // $12 por el primer kg
      const additionalKilos = Math.max(0, weight - 1); // Kilos adicionales
      const additionalCost = additionalKilos * 12; // $12 por cada kg adicional
      
      const shippingCost = firstKilo + additionalCost;
      const subtotal = shippingCost + customsFee;
      
      // Impuesto del 24% si el valor es mayor a $200
      const taxes = value > 200 ? value * 0.24 : 0;
      
      // Total incluyendo el valor del producto
      const total = value + subtotal + taxes;
      
      // Mostrar resultados
      document.getElementById('result-weight').textContent = weight.toFixed(2) + ' kg';
      document.getElementById('result-value').textContent = '$' + value.toFixed(2);
      document.getElementById('shipping-cost').textContent = '$' + shippingCost.toFixed(2);
      document.getElementById('customs-fee').textContent = '$' + customsFee.toFixed(2);
      document.getElementById('taxes').textContent = '$' + taxes.toFixed(2);
      document.getElementById('subtotal').textContent = '$' + subtotal.toFixed(2);
      document.getElementById('total').textContent = '$' + total.toFixed(2);
      
      // Actualizar enlace de WhatsApp
      updateWhatsAppLink(description, weight, value, shippingCost, customsFee, taxes, total);
      
      // Mostrar sección de resultados
      document.getElementById('results').style.display = 'block';
      window.scrollTo({
        top: document.getElementById('results').offsetTop - 20,
        behavior: 'smooth'
      });
    }
    
    function calculateByLink() {
      const link = document.getElementById('product-link').value.trim();
      
      if (link === '') {
        alert('Por favor ingresa un enlace válido');
        return;
      }
      
      // Simulación de obtención de datos (en un caso real, esto se haría con backend)
      alert('Esta función requiere conexión con un servicio backend para extraer los datos del producto');
      
      // Datos de ejemplo para demostración
      const exampleData = {
        weight: 1.8,
        value: 150,
        description: 'Producto de ejemplo'
      };
      
      // Llenar los campos automáticamente
      document.getElementById('weight').value = exampleData.weight;
      document.getElementById('value').value = exampleData.value;
      document.getElementById('description').value = exampleData.description;
      
      // Calcular con los datos de ejemplo
      calculateShipping();
    }
    
    function updateWhatsAppLink(description, weight, value, shippingCost, customsFee, taxes, total) {
      let message = `Hola SEA Logistics, necesito información sobre este envío:\n\n`;
      
      if (description) {
        message += `📦 Producto: ${description}\n`;
      }
      
      message += `⚖️ Peso: ${weight.toFixed(2)} kg\n`;
      message += `💰 Valor declarado: $${value.toFixed(2)}\n`;
      message += `🚚 Costo de envío: $${shippingCost.toFixed(2)}\n`;
      message += `📦 Desaduanaje: $${customsFee.toFixed(2)}\n`;
      
      if (taxes > 0) {
        message += `🏛️ Impuestos: $${taxes.toFixed(2)}\n`;
      }
      
      message += `💵 Total: $${total.toFixed(2)}\n\n`;
      message += `Por favor, necesito más información sobre este envío.`;
      
      const encodedMessage = encodeURIComponent(message);
      document.getElementById('whatsapp-link').href = `https://wa.me/51923465624?text=${encodedMessage}`;
    }
  </script>
